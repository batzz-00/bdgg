{
  "name": "Le Keks Dee",
  "version": "2.0.1",
  "manifest_version": 2,

  "description": "Make Destiny.gg Great Again",
  "icons": {
    "48": "./static/icon/icon.png"
  },

  "browser_action": {
    "default_icon": {
      "48": "./static/icon/icon.png"
    }
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.destiny.gg/*"
  ],

  "background": {
    "scripts": [
      "index.js"
    ],
    "persistent": true
  },

  "web_accessible_resources": [
    "dgg/*",
    "static/*"
  ]
}
